@{
    Layout = null;
}

@model SMS.Domain.CQRS.Commands.AddTeacherCommand

@using (Ajax.BeginForm("AddUser", null, new AjaxOptions { HttpMethod = "POST" }, new { Id = "addTeacherForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal_header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="timetable-text head-add-form" >Добавить преподавателя</h4>
    </div>

    <div class="col-add col-md-6">
        @Html.ValidationMessageFor(m => m.FullName)
        @Html.TextBoxFor(m => m.FullName, new { Id = "thFullName", Name = "FullName", Class = "addInf", Placeholder = "Имя" })

        @Html.TextBoxFor(m => m.City, new { Id = "thCity", Name = "City", Class = "addInf", Placeholder = "Город" })
        @Html.ValidationMessageFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { Id = "thEmail", Name = "Email", Class = "addInf", Placeholder = "E-mail" })
    </div>

    <div class="col-add col-md-6">
        <input id="thEducation" class="addInf" name="Education" placeholder="Образование" />
        @Html.ValidationMessageFor(m => m.ExperienceInYears)
        @Html.TextBoxFor(m => m.ExperienceInYears, new { Id = "thExperienceInYears", Name = "ExperienceInYears", Class = "addInf", Placeholder = "Стаж" })
        <select id="thNation" class="addInf" name="IsRussian">
            <option value="true">Русскоговорящий</option>
            <option value="false">Носитель языка</option>
        </select>
    </div>
    <div class="foot-modal-note col-md-12">
        @{ Html.RenderAction("SelectLenguageBox", "Admin");}
    </div>
    <div class="foot-modal-note col-md-12">
        @Html.ValidationMessageFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { Id = "thDescription", Name = "Description", Class = "addInf text-field block-center", Placeholder = "Текст описания" })
    </div>

    <div class="form-group col-md-12">
        @Html.ValidationMessageFor(m => m.ImageFile)
        <div class="fileform-admin">
            <div id="imageAddTeacherFormLabel" class="imageformlabel"></div>
            <div class="selectbutton">Обзор</div>
            @Html.TextBoxFor(m => m.ImageFile, new { Id = "thImageFile", type = "file", Name = "ImageFile", Class = "selectFile", onchange = "getName(this.value, imageAddTeacherFormLabel);" })
        </div>
    </div>
    <div class="form-group col-md-12">
        @Html.ValidationMessageFor(m => m.AudioFile)
        <div class="fileform-admin">
            <div id="audioAddTeacherFormLabel" class="audioformlabel"></div>
            <div class="selectbutton">Обзор</div>
            @Html.TextBoxFor(m => m.ImageFile, new { Id = "thAudioFile", type = "file", Name = "AudioFile", Class = "selectFile", onchange = "getName(this.value, audioAddTeacherFormLabel);" })
        </div>
    </div>
            <div class="form-group col-md-12">
                <div class="progress progress-striped">
                    <div class="progress-bar progress-bar-success">0%</div>
                </div>
            </div>
            <div  id="ajaxSendStatusC" class="form-group col-md-12 alert-success hidden">
            </div>
            <div class="form-group col-md-12 modal_footer">
                    <button type="button" class="btn-adds" onclick="processTeacher(1)">Добавить</button>
            </div>
            }
<script>

</script>
