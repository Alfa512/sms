@{
    Layout = null;
}

<div class="modal-dialog modal-cost-in" role="document">
    <div class="modal-content form-add">
        <div class="modal_header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="timetable-text head-add-form">Введите свой E-mail,<br /> на него будет высланы реквизиты для оплаты</h4>
        </div>
        <form name="payForm" class="content-modal-pay" ng-submit="submit()" novalidate>
            <img src="~/Content/img/creditCard.png" alt="" />
            <div class="inputs">
                <input id="stFullNameReq" class="form-md form-pay" name="stFullNameReq" placeholder="Имя" onfocus="this.placeholder = ''" onblur="    this.placeholder = 'Имя'" type="text" ng-class="{ 'has-error' : payForm.stFullNameReq.$invalid && !payForm.stFullNameReq.$pristine }" ng-model="stFullNameReq" xng-clearable required /><br />
                <input id="stEmailReq" class="form-md form-pay" name="stEmailReq" placeholder="E-mail" onfocus="this.placeholder = ''" onblur="    this.placeholder = 'E-mail'" type="email" ng-class="{ 'has-error' : payForm.stEmailReq.$invalid && !payForm.stEmailReq.$pristine }" ng-model="stEmailReq" xng-clearable required />
            </div><br />
            <input id="submit" class="btn-ok" data-dismiss="modal" aria-label="Close" type="submit" onclick="sentRequisites()" ng-disabled="payForm.$invalid" value="ОК" />
        </form>
    </div>
</div>